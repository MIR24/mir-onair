<div class="container">
    <!-- Павел Беляев, [12.08.19 18:42]
        Господа, демо подложку не забудьте пожалуйста
        Лучше из 2 частей -->

    {% if (schedule_banners.getFullBanner()) %}
        <!-- Полное брендирование (демо подложка) -->
        <div class="branding">
            <div class="branding__part branding__part--full rotate-slick">
                {% for item in schedule_banners.getFullBanner() %}
                    <a href="{{ item.link }}"><img src="{{ item.image.path }}" /></a>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <!-- Двойное брендирование (демо подложка из 2х частей) -->
    <div class="branding ">
        {% if (schedule_banners.getLeftBanner()) %}
            <div class="branding__part branding__part--left rotate-slick">
                {% for item in schedule_banners.getLeftBanner() %}
                    <a href="{{ item.link }}"><img src="{{ item.image.path }}" /></a>
                {% endfor %}
            </div>
        {% endif %}
        {% if (schedule_banners.getRightBanner()) %}
            <div class="branding__part branding__part--right rotate-slick">
                {% for item in schedule_banners.getRightBanner() %}
                    <a href="{{ item.link }}"><img src="{{ item.image.path }}" /></a>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="container__content">
        {% include 'translation.twig' %}
        {% include 'onair.twig' %}
        {% include 'radio.twig' %}
    </div>
</div>
