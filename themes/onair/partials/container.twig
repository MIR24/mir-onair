<div class="container">

    {% if (schedule_banners.getFullBanner()) %}
        <!-- Полное брендирование (демо подложка) -->
        <div class="branding">
            <div class="branding__part branding__part--full">
                <a href="{{schedule_banners.getFullBanner().link }}"><img src="{{ schedule_banners.getFullBanner().image.path }}" /></a>
            </div>
        </div>
    {% endif %}

    {% if (schedule_banners.getDoubleBanner()) %}
        <div class="branding ">
            <div class="branding__part branding__part--left">
                <a href="{{ schedule_banners.getDoubleBanner().link }}"><img src="{{ schedule_banners.getDoubleBanner().image_left.path }}" /></a>
            </div>
            <div class="branding__part branding__part--right">
                <a href="{{ schedule_banners.getDoubleBanner().link }}"><img src="{{ schedule_banners.getDoubleBanner().image_right.path }}" /></a>
            </div>
        </div>
    {% endif %}

    <div class="container__content">
        {% include 'translation.twig' %}
        {% include 'onair.twig' %}
        {% include 'radio.twig' %}
    </div>
</div>